<!DOCTYPE html>
<html lang="es-mx">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>PaperMID</title>

    <!-- CSS  -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/Content/cssfront/materialize.css" rel="stylesheet" media="screen,projection" />
    <link href="~/Content/cssfront/style.css" rel="stylesheet" media="screen,projection" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Bootstrap core CSS -->
    <link href="~/Content/cssfront/bootstrap.min.css" rel="stylesheet" />
    <!-- Material Design Bootstrap -->
    <link href="~/Content/cssfront/mdb.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <link href="~/Content/Css/alertify.css" rel="stylesheet" />
    <script src="~/Scripts/jsfront/jquery.js"></script>

    <style>
        /* TEMPLATE STYLES */

        .flex-center {
            color: #fff;
        }

        .intro-1 {
            background: url("../../Content/Images/colores.jpg")no-repeat center center;
            background-size: cover;
        }

        .fondoBlanco {
            background-color: transparent;
            color: black;
            width: 650px;
        }

        .navbar .btn-group .dropdown-menu a:hover {
            color: #000 !important;
        }

        .navbar .btn-group .dropdown-menu a:active {
            color: #fff !important;
        }

        .centrado {
            width: 150px;
            height: 150px;
            position: absolute;
            top: 50%;
            left: 50%;
            margin-top: -75px;
            margin-left: -75px;
            background-color: #69a6e5;
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark indigo fixed-top">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Inicio","Publico")">PaperMID</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            &nbsp;&nbsp;&nbsp;
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                @using (Ajax.BeginForm("Buscar", "Publico", new AjaxOptions { HttpMethod = "POST" }, new { enctype = "multipart/form-data", @class = "form-inline fondoBlanco" }))
                {
                    @Html.AntiForgeryToken()
                    <form>
                        <input class="form-control mr-sm-auto col-lg-11" type="text" placeholder="Buscar" name="dato" required>
                        <a><i class="material-icons right">search</i></a>
                    </form>
                }
                &nbsp;&nbsp;&nbsp;
                <ul class="navbar-nav">

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ProductosRep","Publico")">Productos</a>
                    </li>
                    &nbsp;&nbsp;
                    <li class="nav-item btn-group">
                        <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Más
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <a class="dropdown-item" href="#">Contacto</a>
                            <a class="dropdown-item" href="@Url.Action("QuienesSomos","Publico")">Quiénes Somos</a>

                        </div>
                    </li>
                    &nbsp;&nbsp;
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="modal" data-target="#exampleModal">Iniciar Sesión</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    @*Inicio Index promociones*@
    @RenderBody();
    <footer class="page-footer teal">
        <div class="container">
            <div class="divider-new">
                <img src="~/Content/Images/Logos/navitek.png" width="180" height="80" />
                <img src="~/Content/Images/Logos/Bic-Logo.png" width="160" height="80" />
                <img src="~/Content/Images/Logos/logobarrilitoblanco.png" width="170" height="60" />
                <img src="~/Content/Images/Logos/Kole.gif" width="170" height="170" />
                <img src="~/Content/Images/Logos/indra.png" width="160" height="80" />
            </div>
        </div>
        <div class="footer-copyright">
            <div class="container">
                <a class="brown-text text-lighten-3" href="#ini">PaperMID</a>
            </div>
        </div>
    </footer>
    @using (Ajax.BeginForm("Login", "Publico", new AjaxOptions { HttpMethod = "POST" }, new { enctype = "multipart/form-data", @class = "" }))
    {
        @Html.AntiForgeryToken()
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header text-center">
                        <h4 class="modal-title w-100 font-weight-bold">Iniciar Sesión</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body mx-3">
                        <div class="md-form mb-5">
                            <i class="fa fa-user prefix grey-text"></i>
                            <input type="text" id="defaultForm-email" name="user" class="form-control validate">
                            <label data-error="Error" data-success="Valido" for="defaultForm-email">Usuario</label>
                        </div>

                        <div class="md-form mb-4">
                            <i class="fa fa-lock prefix grey-text"></i>
                            <input type="password" id="defaultForm-pass" name="pass" class="form-control validate">
                            <label data-error="Error" data-success="Valido" for="defaultForm-pass">Contraseña</label>
                        </div>

                    </div>
                    <div class=" d-flex justify-content-center">
                        <button class="btn btn-default">Iniciar</button>
                    </div>
                </div>
            </div>
        </div>
    }
    <!--  Scripts-->
    <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src="~/Scripts/jsfront/materialize.js"></script>
    <script src="~/Scripts/jsfront/init.js"></script>
    <!-- SCRIPTS BASICA  -->
    <!-- JQuery -->
    <script src="~/Scripts/jsfront/jquery-3.1.1.min.js"></script>
    <!-- Bootstrap dropdown -->
    <script type="text/javascript" src="~/Scripts/jsfront/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="~/Scripts/jsfront/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script type="text/javascript" src="~/Scripts/jsfront/mdb.min.js"></script>
    <!--Google Maps-->
    <script src="https://maps.google.com/maps/api/js"></script>

</body>
</html>
